# 图片库环境配置
VITE_APP_TITLE=Picture Gallery
VITE_APP_DESCRIPTION=个人图片库展示系统

# GitHub 配置 (生产环境请使用服务端代理，不要直接暴露token)
# VITE_GITHUB_OWNER=your_github_username
# VITE_GITHUB_REPO=your_repo_name
# VITE_GITHUB_TOKEN=your_github_token_here

# 开发环境配置
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost

# 图片库配置
VITE_GALLERY_PATH=/uploads
VITE_GALLERY_METADATA_PATH=/gallery-metadata.json

# 部署配置
VITE_BASE_URL=/picture-gallery/
VITE_PUBLIC_PATH=/picture-gallery/

# 调试模式
VITE_DEBUG=false

# 🔐 登录认证配置
VITE_ADMIN_USERNAME=admin
# 密码哈希 (请修改为你自己的密码)
VITE_ADMIN_PASSWORD_HASH=your_password_hash_here

# 加密密钥 (请修改为你自己的密钥)
VITE_ENCRYPTION_KEY=your_encryption_key_here